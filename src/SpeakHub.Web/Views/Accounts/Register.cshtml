@using SpeakHub.Service.Dtos.Admins;
@model AdminRegisterDto

<div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
    <form asp-controller="accounts" asp-action="register" novalidate="novalidate" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" id="kt_sign_up_form">
        <div class="mb-10 text-center">
            <h1 class="text-registan mb-3">
                Create Admin
            </h1>
        </div>
        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <div class="col-xl-6">
                <label class="form-label fw-bold text-dark fs-6">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-xl-6">
                <label class="form-label fw-bold text-dark fs-6">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Birth Date</label>
            <input type="date" asp-for="BirthDate" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        @* <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Address</label>
            <input type="text" asp-for="Address" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div> *@
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-10 fv-row fv-plugins-icon-container" data-kt-password-meter="true">
            <div class="mb-1">
                <label class="form-label fw-bold text-dark fs-6">
                    Password
                </label>
                <div class="position-relative mb-3">
                    <input type="password" asp-for="Password" class="form-control form-control-lg form-control-solid" name="password" autocomplete="off">
                </div>
            </div>
            <div class="text-muted">
                Use 8 or more characters with a mix of letters, numbers &amp; symbols.
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-registan">
                <span class="indicator-label">
                    Submit
                </span>
            </button>
        </div>
    </form>
</div>
